  if pilihan == "1":
    hasil = tambah(angka1, angka2)
  elif pilihan == "2":
    hasil = kurang(angka1, angka2)
  elif pilihan == "3":
    hasil = kali(angka1, angka2)
  elif pilihan == "4":
    hasil = bagi(angka1, angka2)
  elif pilihan == "5":
    hasil = pangkat(angka1, angka2)
  else:
    print("Pilihan tidak valid!")
    return

  '''
    Fungsi yang mengecek pemilihan pengguna dan menjalankan fungsi
  '''
    
  print("Hasil:", hasil)

  '''
    Hasil operasi ditampilkan ke layar
  '''

kalkulator()
'''
  Baris ini menjalankan seluruh kalkulator yang sudah dibuat
'''
